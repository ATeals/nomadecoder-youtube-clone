extends ../base.pug

block content  
    section.join
        span.error=error  
        form(method="post")
            input( name="username", type="username", placeholder="username", required)
            input( name="password", type="password", placeholder="password", required)
            input(type="submit", value="Login").submit
            hr
            div
                a.social(href="users/github/start")
                    img(src="https://www.google.com/s2/favicons?domain=https://github.com/ATeals&sz=24")
                    span Continue with Github

            hr
            div
                span Don't have an account?  
                a(href="/join") Create one now &rarr;