header
    h1 
        a(href="/") Attic
    nav 
        ul 
            li 
                a(href="/")  <i class="fa-brands fa-youtube"></i>
            li 
                a(href="/search")  <i class="fa-solid fa-magnifying-glass"></i>
            if loggedIn
                li.profile
                    img(src=loggedInUser.socialOnly ? loggedInUser.avatarUrl : "/" +loggedInUser.avatarUrl, alt="")
                   

            if !loggedIn
                li   
                    a(href="/login")
                         <i class="fa-solid fa-arrow-right-to-bracket"></i>
                         span.signin  SignIn

    if loggedIn
        div.modal.hidden
            div.modalBubble

                img(src=loggedInUser.socialOnly ? loggedInUser.avatarUrl : "/" +loggedInUser.avatarUrl, alt="")
                div.username=loggedInUser.name
                
                hr
                div.menu
                    a(href=`/users/${loggedInUser._id}`)
                        <i class="fa-regular fa-user"></i>
                        span Profile

                    a(href=`/users/${loggedInUser._id}/likeVideos`)
                        <i class="fa-solid fa-heart"></i>
                        span #{loggedInUser.likeVideos.length > 1 ? `${loggedInUser.likeVideos.length} Like Videos` : `${loggedInUser.likeVideos.length} Like Video`}
                    a(href="/videos/upload")
                        <i class="fa-solid fa-upload"></i>
                        span Upload Video
                    a(href="/users/logout").logOut 
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                        span Log Out
                    