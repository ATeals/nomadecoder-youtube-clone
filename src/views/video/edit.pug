extends ../base.pug


block content
    section.join
        h1 Change Video Info
        form(method ="POST")
            input(name="title" type="text" placeholder="Video title" value=video.title required)
            input(name="description" type="text" placeholder="Video description" value=video.description required)
            input(name="hashtags" type="text" placeholder="HashTags" value=video.hashtags.join(",") required)
            input(type="submit" value = "save").submit
    